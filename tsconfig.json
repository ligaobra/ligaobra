{
"compilerOptions": {
  "target": "esnext",
  "module": "esnext",
  "baseUrl": ".",
  "paths": {
    "@/*": ["app/*"],
    "@/components/*": ["components/*"],
    "@/lib/*": ["lib/*"]
  },
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "skipLibCheck": true,
  "noEmit": true,
  "incremental": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "plugins": [
    {
      "name": "next"
    }
  ],
  "allowJs": true,
  "strict": false,
  "esModuleInterop": true,
  "moduleResolution": "node",
  "jsx": "preserve"
},
"include": [
  "next-env.d.ts",
  ".next/types/**/*.ts",
  "**/*.ts",
  "**/*.tsx"
],
"exclude": ["node_modules"]
}
